<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NotificacionesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color primario -->
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryVariant">#1E1E1E</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Color secundario -->
        <item name="colorSecondary">#2C2C2C</item>
        <item name="colorSecondaryVariant">#3C3C3C</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Color terciario -->
        <item name="colorTertiary">#3700B3</item>
        <item name="colorOnTertiary">#FFFFFF</item>

        <!-- Contenedores -->
        <item name="colorPrimaryContainer">#1E1E1E</item>
        <item name="colorOnPrimaryContainer">#E1E1E1</item>
        <item name="colorSecondaryContainer">#2C2C2C</item>
        <item name="colorOnSecondaryContainer">#E1E1E1</item>

        <!-- Barras de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>

        <!-- Transiciones -->
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>